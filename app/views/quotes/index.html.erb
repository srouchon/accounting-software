<div class="quote">
  <h2>Devis</h2>
  <div>
    <%= link_to 'Créer un devis', new_company_customer_quote_path(@company, @customer), class: 'btn btn-primary' %>
  </div>
  <br>
  <table border="1">
    <thead>
      <tr>
        <th>Référence</th>
        <th>Description du devis</th>
        <th>Acompte</th>
        <th>Prix HT</th>
        <th>Prix TTC</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @quotes.each do |quote| %>
        <tr>
          <td>          
            <%= link_to company_customer_quote_path(@company, @customer, quote) do %>
              <%= quote.ref_quote %></td>
            <% end %>
          <td><%= quote.description %></td>
          <td><%= quote.deposit %></td>
          <td><%= quote.price_duty_free %></td>
          <td><%= quote.price_all_taxes %></td>
          <td>
            <%= link_to 'voir', company_customer_quote_path(@company, @customer, quote), class: 'btn btn-secondary' %>
            <%= link_to 'supprimer', company_customer_quote_path(@company, @customer, quote), method: :delete, class: 'btn btn-danger', data: { confirm: "Delete?" } %>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
<br>
<div>
  <%= link_to '< Retour', company_customer_path(@company, @customer), class: 'btn btn-primary' %>
</div>