<div class="quote">
  <h2>Quotes</h2>
  <div>
    <%= link_to 'Add a new quote', new_company_customer_quote_path(@company, @customer), class: 'btn btn-primary' %>
  </div>
  <table border="1">
    <thead>
      <tr>
        <th>Ref_Quote</th>
        <th>Description</th>
        <th>Deposit</th>
        <th>Price w/o taxes</th>
        <th>Price w/ taxes</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      <% @quotes.each do |quote| %>
        <tr>
          <td>          
            <%= link_to company_customer_quote_path(@company, @customer, quote) do %>
              <%= quote.ref_quote %></td>
            <% end %>
          <td><%= quote.description %></td>
          <td><%= quote.deposit %></td>
          <td><%= quote.price_duty_free %></td>
          <td><%= quote.price_all_taxes %></td>
          <td>
            <%= link_to 'edit', edit_company_customer_quote_path(@company, @customer, quote), class: 'btn btn-warning' %>
            <%= link_to 'remove', company_customer_quote_path(@company, @customer, quote), method: :delete, class: 'btn btn-danger', data: { confirm: "Delete?" } %>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
<div>
  <%= link_to '< Back', company_customer_path(@company, @customer), class: 'btn btn-primary' %>
</div>