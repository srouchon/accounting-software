<div>
  <%= simple_form_for([@company, @customer, @quote]) do |f| %>
    <div class="form-group">
      <%= f.input :ref_quote, label: 'Référence Devis:' %>
    </div>
    <div class="form-group">
      <%= f.input :description, as: :text, label: 'Description:' %>
    </div>
    <div class="form-group">
      <table>
        <thead>
        </thead>
        <tbody class='services'>
          <tr>
            <%= f.simple_fields_for(:services) do |builder| %>
              <%= render 'service_fields', f: builder %>
            <% end %>
            <%= f.simple_fields_for(:quote_services) do |f| %>
              <td><%= f.input :quantity, label: 'Quantité' %></td>
              <td><%= f.input :total_price_service, label: 'Total Prestation' %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div> 
    <div>
      <%= link_to_add_association 'Ajouter une prestation', f, :services, class: 'btn btn-primary', data: { association_insertion_node: '.services', association_insertion_method: :append } %>
    </div>
    <div class="form-group">
      <%= f.input :price_duty_free, label: 'Prix total HT:' %>
      <%= f.input :price_all_taxes, label: 'Prix total TTC:' %>
    </div>
    <div class="form-group">
      <%= f.input :deposit, label: 'Acompte:' %>
    </div>
    <%= f.submit 'Valider le devis' %>
    <%= link_to '< Retour', company_customer_quotes_path(@company, @customer), class: 'btn btn-primary' %>
  <% end %>
</div>
