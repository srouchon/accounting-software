<div>
  <%= simple_form_for([@company, @customer, @quote]) do |f| %>
    <%= f.input :ref_quote %>
    <%= f.input :description %>
    <%= f.association :services, collection: Service.all.map{ |s| s.description_service }, prompt: "Choose a service" %>
    <%= f.submit %>
    <%= link_to '< Retour', company_customer_path(@company, @customer), class: 'btn btn-primary' %>
  <% end %>
</div>
