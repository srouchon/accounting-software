<div>
  <%= simple_form_for([@company, @customer]) do |f| %>
    <%= f.input :name %>
    <%= f.input :ref_client %>
    <%= f.input :address %>
    <%= f.input :postcode %>
    <%= f.input :city %>
    <%= f.input :phone_1 %>
    <%= f.input :phone_2 %>
    <%= f.input :email_1 %>
    <%= f.input :email_2 %>
    <%= f.input :siret %>
    <%= f.submit %>
    <%= link_to '< Retour', company_customers_path(@company), class: 'btn btn-primary' %>
  <% end %>
</div>