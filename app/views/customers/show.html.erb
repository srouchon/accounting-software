<div>
  <h1><%= @customer.name %> - <%= @customer.ref_client %></h1>
  <p>
    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
      Voir les coordonnées
    </button>
  </p>
  <div class="collapse" id="collapseExample">
    <div class="card card-body">
      <div>Adresse: <%= @customer.address %> <%= @customer.postcode %> <%= @customer.city %></div>
      <div>Téléphone: <%= @customer.phone_1 %> <%= @customer.phone_2 %></div>
      <div>Email: <%= @customer.email_1 %> <%= @customer.email_2 %></div>
      <div>SIREN: <%= @customer.siren %> / SIRET: <%= @customer.siret %></div>  
    </div>
    <br>
    <%= link_to 'Modifier les coordonnées', edit_company_customer_path(@company, @customer), class: 'btn btn-warning' %>
  </div>
</div>
<br>
<div class="quote">
  <h2>Devis (5 derniers)</h2>
  <div>
    <%= link_to 'Voir tous les devis', company_customer_quotes_path(@company, @customer) %>
  </div>
  <table border="1">
    <thead>
      <tr>
        <th>Référence</th>
        <th>Description du devis</th>
        <th>Acompte</th>
        <th>Prix HT</th>
        <th>Prix TTC</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @quotes.each do |quote| %>
        <tr>
          <td>          
            <%= link_to company_customer_quote_path(@company, @customer, quote) do %>
              <%= quote.ref_quote %></td>
            <% end %>
          <td><%= quote.description %></td>
          <td><%= quote.deposit %></td>
          <td><%= quote.price_duty_free %></td>
          <td><%= quote.price_all_taxes %></td>
          <td>
            <%= link_to 'voir', company_customer_quote_path(@company, @customer, quote), class: 'btn btn-secondary' %>
            <%= link_to 'supprimer', company_customer_quote_path(@company, @customer, quote), method: :delete, class: 'btn btn-danger', data: { confirm: "Supprimer?" } %>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
<br>
<div class="bill">
  <h2>Factures (5 dernières)</h2>
  <div>
    <%= link_to 'Voir toutes les factures', company_customer_bills_path(@company, @customer) %>
  </div>
  <table border="1">
    <thead>
      <tr>
        <th>Référence</th>
        <th>Description de la facture</th>
        <th>Acompte</th>
        <th>Prix HT</th>
        <th>Prix TTC</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @bills.each do |bill| %>
        <tr>
          <td>          
            <%= link_to company_customer_bill_path(@company, @customer, bill) do %>
              <%= bill.ref_bill %></td>
            <% end %>
          <td><%= bill.description %></td>
          <td><%= bill.deposit %></td>
          <td><%= bill.price_duty_free %></td>
          <td><%= bill.price_all_taxes %></td>
          <td><%= link_to 'voir', company_customer_bill_path(@company, @customer, bill), class: 'btn btn-secondary' %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
<br>
<div>
  <%= link_to '< Retour', company_customers_path(@company), class: 'btn btn-primary' %>
</div>