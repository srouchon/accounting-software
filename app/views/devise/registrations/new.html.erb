<h2>Inscription</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :firstname,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "prénom" }%>
    <%= f.input :lastname,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "nom" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                input_html: { autocomplete: "nouveau mot de passe" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "confirmation mot de passe" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "S'inscrire" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
