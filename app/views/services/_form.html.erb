<% if @customer.nil? && @quote.nil? %>
  <div>
    <%= simple_form_for([@company, @service], url: company_services_path) do |f| %>
      <%= f.input :ref_service, label: 'Réf. Prestation' %>
      <%= f.input :description_service, label: 'Prestation' %>
      <%= f.input :unit_price, label: 'Prix unitaire' %>
      <%= f.submit %>
      <%= link_to '< Retour', company_services_path(@company), class: 'btn btn-primary' %>
    <% end %>
  </div>
<% else %>
  <div>
    <%= simple_form_for([@company, @quote, @service], url: company_customer_quote_services_path) do |f| %>
      <%= f.input :ref_service, label: 'Réf. Prestation' %>
      <%= f.input :description_service, label: 'Prestation' %>
      <%= f.input :unit_price, label: 'Prix unitaire' %>
      <%= f.submit %>
      <%= link_to '< Retour', company_customer_quote_path(@company, @customer, @quote), class: 'btn btn-primary' %>
    <% end %>
  </div>
<% end %>

