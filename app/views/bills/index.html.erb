<div class="bill">
  <h2>Bills</h2>
  <div>
    <%= link_to 'Add a new bill', new_company_customer_bill_path(@company, @customer), class: 'btn btn-primary' %>
  </div>
  <table border="1">
    <thead>
      <tr>
        <th>Ref_bill</th>
        <th>Description</th>
        <th>Deposit</th>
        <th>Price w/o taxes</th>
        <th>Price w/ taxes</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      <% @bills.each do |bill| %>
        <tr>
          <td>          
            <%= link_to company_customer_bill_path(@company, @customer, bill) do %>
              <%= bill.ref_bill %></td>
            <% end %>
          <td><%= bill.description %></td>
          <td><%= bill.deposit %></td>
          <td><%= bill.price_duty_free %></td>
          <td><%= bill.price_all_taxes %></td>
          <td>
            <%= link_to 'edit', edit_company_customer_bill_path(@company, @customer, bill), class: 'btn btn-warning' %>
            <%= link_to 'remove', company_customer_bill_path(@company, @customer, bill), method: :delete, class: 'btn btn-danger', data: { confirm: "Delete?" } %>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
<div>
  <%= link_to '< Back', company_customer_path(@company, @customer), class: 'btn btn-primary' %>
</div>